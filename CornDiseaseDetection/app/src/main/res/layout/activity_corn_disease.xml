    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CornDiseaseActivity"
    android:orientation="vertical"
    android:layout_margin="@dimen/mrgApp">

    <ImageView
        android:id="@+id/imgDeCamara"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/btnSecundary" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDeCamara"
        android:layout_marginTop="@dimen/mrgApp1"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/titulo_enfer_iden"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/txtTitle">
        <TextView
            android:id="@+id/txtEnfermedad_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="Probabilidad #1"/>
        <TextView
            android:id="@+id/txtProbabilidad_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="0%"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL1">
        <TextView
            android:id="@+id/txtEnfermedad_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #2"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL2">
        <TextView
            android:id="@+id/txtEnfermedad_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #3"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL3">
        <TextView
            android:id="@+id/txtEnfermedad_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #4"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL4">
        <TextView
            android:id="@+id/txtEnfermedad_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #5"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL5">
        <TextView
            android:id="@+id/txtEnfermedad_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #6"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL6">
        <TextView
            android:id="@+id/txtEnfermedad_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #7"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL7">
        <TextView
            android:id="@+id/txtEnfermedad_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #8"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL8">
        <TextView
            android:id="@+id/txtEnfermedad_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #9"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL9">
        <TextView
            android:id="@+id/txtEnfermedad_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Probabilidad #10"
            android:textColor="#868686"/>
        <TextView
            android:id="@+id/txtProbabilidad_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#868686"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/svInfo"
        android:layout_marginTop="@dimen/mrgApp1"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/titulo_info_adic"
        android:textSize="17dp" />




        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_above="@+id/clBotones"
            android:id="@+id/svInfo"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtInfoAd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textoInfo"
                    />


                <TextView
                    android:id="@+id/txtVermas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textoVerMas"
                    android:textColor="#2232D1"
                    />

            </LinearLayout>


        </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mrgApp"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/btnCapturarImg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/shape_btn_primary"
            android:text="@string/btnCaptImg"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/btnCargarImg"
            app:layout_constraintEnd_toStartOf="@+id/btnCargarImg"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnCargarImg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/shape_btn_secundary"
            app:backgroundTint="@null"
            android:text="@string/btnCargImg"
            android:textAllCaps="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnCapturarImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnCapturarImg"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

